<html lang="en">

<head>
	<title> {% block title %} {% endblock %} </title>
	<link rel="stylesheet" type="text/css" href={{url_for("static", filename="css/main.css")}}> 
</head>

{% with messages = get_flashed_messages(with_categories=True) %}
	{% if messages %}
		<ul class="flashes">
		{% for category,message in messages %}
			<li class="{{category}}"> {{messages}} </li>
		{% endfor %}
		</ul>
	{% endif %}
{% endwith %}

<body>
<header>
	<h1> <a href="{{ url_for("view_welcome_page") }}"> Richard Pajzinka </h1>
</head>

<nav>
	<ul class=nav>
		<li> <a href="{{ url_for("view_about") }}">About</a> </li>
		<li> <a href="{{ url_for("view_articles") }}">Articles</a> </li>
		<li> <a href="{{ url_for("view_admin") }}">Admin page</a> </li>
		{% if "logged" in session %}
			<li>
				<form action="{{ url_for("logout_user")}}" method="post">
					<input type="submit" value="logout">
				</form>
			</li>
		{% endif %}
	</ul>
</nav>

<main>
	{% block main %} {% endblock %}
</main>

<footer>
	<p>
		(c) 2023 Richard Pajzinka
	</p>
</footer>
</body>
</html>